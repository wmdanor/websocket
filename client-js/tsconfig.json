{
    "version": "2.0.2",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "declaration": true,
        "declarationDir": "types",
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "Node16",
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "target": "ESNext",
        "rootDir": "."
    },
    "include": [
        "**/*.mjs",
    ],
    "exclude": [
        "node_modules"
    ]
}
